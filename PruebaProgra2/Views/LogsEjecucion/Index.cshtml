@model IEnumerable<PruebaProgra2.Models.LogsEjecucion>

@{
    ViewData["Title"] = "Registro de Logs";
}

<h2>
    A continuación se presentan los registros de tareas finalizadas y fallidas
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z" />
    </svg>
</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mensaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th>
                Estado
            </th>
            <th>
                Tarea
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mensaje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaLog)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                </td>
                <td>
                    @item.Estado.NombreEstado
                </td>
                <td>
                    @item.Tarea.Nombre
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.LogId">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.LogId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
